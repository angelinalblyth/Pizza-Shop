<h1>
  Welcome to Code Clans Pizza Shop.
</h1>

<p>
  Below you can delete or edit the order selected.
</p>

<div class="main-container">

    <div class = 'pizza-orders'>


<form method ="post" action="/pizza-orders/<%= @order.id %>/edit">
  <label for="first_name">First Name:</label>
  <input id="first_name" type="text" name="first_name" value = "<%= @order.first_name %>" />
<br />
  <label for="last_name">Last Name:</label>
  <input id="last_name" type="text" name="last_name" value = "<%= @order.last_name %>"/>
  <br />
  <label for="pizza_select">Select a pizza:</label>
  <select id="pizza_select" name="topping" value = "<% @order.topping %>" />
    <option value="Margherita">Margherita</option>
    <option value="Calzone">Calzone</option>
  </select>
  <br />
  <label for="quantity">Quantity:</label>
  <input id="quantity" type="number" name="quantity" value = "<%= @order.quantity %>"/>
  <br />
  <input type="submit" value="Edit Pizza" />

</form>

</div>
</div>
